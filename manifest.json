{
  "manifest_version": 3,
  "name": "MeetMute",
  "description": "Google Meet Global Mute Button",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "microphone.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "*://*.meet.google.com/*"
  ],
  "permissions": [
    "tabs",
    "scripting"
  ]
}